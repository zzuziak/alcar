<div class="category-banner" style="background-image: linear-gradient(-225deg, rgba(135, 135, 135, 0.8) 0%, rgba(135,135,135,0.4) 50%), url('../assets/klima.jpg');">
  <div class="banner-content">
    <div class="cat-banner-title">
      <h1><%= @category.name %></h1>
    </div>
  </div>
</div>

<div class="cat-content">
  <%= render 'shared/back_button', link: root_path %>
  <div class="row row-no-padding">
    <div class="col-xs-12 col-sm-4 cat-description"><p><%= @category.description %></p></div>
    <div class="col-xs-12 col-sm-7 cat-products">
      <% @category.products.each do |product| %>
        <div class="cat-product">
          <div class="cat-product-details">
            <h3><%= product.name %></h3>
            <p class="cat-product-price">ceny od xxx pln</p>
          </div>
          <div class="cat-product-link">
            <%= link_to 'Szczegóły', category_product_path(product), class: "btn-product-details" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
